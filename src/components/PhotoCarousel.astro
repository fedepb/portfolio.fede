---
const photos = [
  { src: "/FWMINDSET-2.webp", alt: "City Street" },
  { src: "/FWMINDSET-4.webp", alt: "City Skyline" },
  { src: "/FWMINDSET-5.webp", alt: "Mountain Peaks" },
  { src: "/FWMINDSET-2.webp", alt: "Wedding Couple" },
  { src: "/FWMINDSET-2.webp", alt: "Portrait" },
];
---

<section class="bg-transparent text-white py-16 px-6">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-4xl font-bold mb-4">My favorite photos</h1>
    <p class="text-lg text-gray-400 mb-8 max-w-2xl">
      A curated collection of my most cherished shots
    </p>

    <!-- Carrusel centrado -->
    <div class="relative w-full">
      <!-- Track desplazable -->
      <div
        id="carouselTrack"
        class="flex transition-transform duration-500 ease-in-out relative z-0 py-8"
      >
        {photos.map((photo, index) => (
          <div
            class="carousel-item shrink-0 w-[300px] mx-4 relative z-0"
            data-index={index}
          >
            <div class="w-full h-96 relative overflow-visible">
              <img
                src={photo.src}
                alt={photo.alt}
                class="rounded-xl shadow-lg object-cover w-full h-full transition-transform duration-300 ease-in-out"
              />
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Botones -->
    <div class="flex justify-center space-x-4 mt-4">
      <button id="prevBtn" class="border border-white rounded-md p-2">←</button>
      <button id="nextBtn" class="border border-white rounded-md p-2">→</button>
    </div>
  </div>
</section>

<script type="module" src="/scripts/carousel.js" defer></script>
