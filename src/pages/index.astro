---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import Budge from "../components/Budge.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHub from "../components/icons/GitHub.astro";
import Mail from "../components/icons/Mail.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Experience from "../components/Experience.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import Code from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
import PhotoCarousel from "../components/PhotoCarousel.astro";
import Video from "../components/Video.astro";
import Services from "../components/Services.astro";

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout
  title="Fede Palacios - Postproductor y desarollador web | Portfolio"
  description="Soy Fede Palacios, especialista en edición de video, diseño gráfico y desarrollo web."
>
  <main>
<SectionContainer class="pt-10 lg:pt-44 pb-4 lg:pb-10">
  <div class="flex flex-col lg:flex-row items-center lg:items-start gap-10">
    <!-- Foto -->
    <div class="w-full max-w-[220px] lg:max-w-[240px] mb-8 lg:mb-0 order-1 lg:order-2">
      <figure class="bg-gradient-to-t from-green-400 via-25% via-green-500 to-65% rounded-[60px] overflow-hidden">
        <img
          src="/fedeG.webp"
          width={656}
          height={800}
          alt="Foto de Fede Palacios"
          class="w-full h-auto object-cover"
        />
      </figure>
    </div>

    <!-- Texto -->
    <div class="flex-1 w-full order-2 lg:order-1">
      <h1 class="text-white text-3xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-4">
        Hola, soy Fede
        <a
              href="https://www.linkedin.com/in/federicopb/"
    target="_blank"
    rel="noopener"
    class="hidden md:flex items-center"
  >
    <Budge>Disponible para trabajar</Budge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl opacity-80 text-wrap max-w-[700px]">
        Especialista en edición de video, diseño gráfico y desarrollo web. De
        Madrid, España. <br />Combino conocimientos técnicos y creatividad visual
        para crear webs modernas y eficientes.
      </h2>
      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/federicopb/">
          <LinkedIn class="size-4 md:size-6" /> LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/fedepb">
          <GitHub class="size-4 md:size-6" /> GitHub
        </SocialPill>
        <SocialPill href="mailto:federicopalaciosvfx@gmail.com">
          <Mail class="size-4 md:size-6" /> federicopalaciosvfx@gmail.com
        </SocialPill>
      </nav>
    </div>
  </div>
</SectionContainer>

    <SectionContainer id="sobre-mi">
      <Services />
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2 class="text-4xl font-semibold mb-6 flex gap-x-3 items-center">
        <Briefcase class="size-7" />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2 class="text-4xl font-semibold mb-6 flex gap-x-3 items-center">
        <Code class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

<!-- Carrusel de fotos -->
<SectionContainer id="galeria" class="overflow-x-hidden">
  <PhotoCarousel />
</SectionContainer>

<!-- Video -->
<SectionContainer id="videoreel">
  <Video embedUrl="https://player.vimeo.com/video/868373615" />
</SectionContainer>
  </main>
</Layout>
